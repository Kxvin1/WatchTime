extends layout.pug

block content
    h1.movies-header Movie Database
    div.movie-row
        each movie in movieDatabase
            div.movie-block
                a(href=`/movies/${movie.id}`)
                    img(class="movie-poster" src=movie.image)
                    p.movie-title-text= movie.title
    link(rel='stylesheet' href='/stylesheets/movies.css')
